version: v0.1
testId: adr-device-patch-user-test
displayName: "AdrDevicePatchUser - ADR Device Patch Load Test"
description: "Tests ADR device patch operations against Azure IoT"
testPlan: ../../src/locust_pkg/adr_device_patch_user.py
testType: Locust
engineInstances: 1
autoStop: disable
referenceIdentities:
  - kind: Engine
    type: SystemAssigned
env:
  # Azure Device Registry (ADR) Configuration - Required
  - name: ADR_SUBSCRIPTION_ID
    value: "your-subscription-id"
  - name: ADR_RESOURCE_GROUP
    value: "your-resource-group"
  - name: ADR_NAMESPACE
    value: "your-adr-namespace"
  - name: ADR_LOCATION
    value: "eastus"

  # Device Configuration - Optional (defaults shown)
  - name: ADR_DEVICE_PREFIX
    value: "adrdev"
  - name: ADR_PATCH_INTERVAL
    value: "5"